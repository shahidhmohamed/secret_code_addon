<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="secret_codes_list_inherit_show_counts" model="ir.ui.view">
    <field name="name">secret_codes list inherit show counts</field>
    <field name="model">secret_codes</field>
    <field name="inherit_id" ref="secret_codes.list"/>
    <field name="arch" type="xml">
      <xpath expr="//list/field[@name='is_printed']" position="after">
        <field name="searched_count_success" readonly="1" widget="badge"
               decoration-success="searched_count_success &gt; 0"
               decoration-info="searched_count_success == 0"/>
        <field name="searched_count_fail" readonly="1" widget="badge"
               decoration-danger="searched_count_fail &gt; 0"
               decoration-info="searched_count_fail == 0"/>
      </xpath>
    </field>
  </record>

</odoo>
