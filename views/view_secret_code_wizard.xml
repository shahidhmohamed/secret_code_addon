<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="secret_codes.view_secret_code_wizard_form" model="ir.ui.view">
    <field name="name">secret_codes.view_secret_code_wizard.form</field>
    <field name="model">secret_codes.view_secret_code_wizard</field>
    <field name="arch" type="xml">
      <form string="View Secret Code">
        <group>
          <field name="secret_code_id" string="Public Code"/>
          <field name="password" password="True"/>
          <field name="revealed_secret_code" readonly="1"/>
        </group>
        <footer>
          <button name="action_reveal" type="object" string="Reveal" class="oe_highlight"/>
          <button string="Close" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>
