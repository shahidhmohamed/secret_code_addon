<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="secret_codes.bulk_activate_wizard_form" model="ir.ui.view">
    <field name="name">secret_codes.bulk_activate_wizard.form</field>
    <field name="model">secret_codes.bulk_activate_wizard</field>
    <field name="arch" type="xml">
      <form string="Bulk Actions">
        <group>
          <field name="public_code_from_id"/>
          <field name="public_code_to_id"/>
          <field name="count"/>
          <field name="range_preview" readonly="1"/>
        </group>
        <footer>
          <button name="action_activate_range" type="object" string="Activate" class="oe_highlight"/>
          <button name="action_deactivate_range" type="object" string="Deactivate" class="btn-secondary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="secret_codes.action_bulk_activate_wizard" model="ir.actions.act_window">
    <field name="name">Bulk Actions</field>
    <field name="res_model">secret_codes.bulk_activate_wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

</odoo>
