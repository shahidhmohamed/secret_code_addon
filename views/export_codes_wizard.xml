<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="secret_codes.export_wizard_form" model="ir.ui.view">
    <field name="name">secret_codes.export_wizard.form</field>
    <field name="model">secret_codes.export_wizard</field>
    <field name="arch" type="xml">
      <form string="Export Secret Codes">
        <group>
          <field name="last_exported_code" readonly="1"/>
          <field name="public_code_from_id"/>
          <field name="public_code_to_id"/>
          <field name="count"/>
          <field name="range_preview" readonly="1"/>
        </group>
        <footer>
          <button name="action_export" type="object" string="Export Excel" class="oe_highlight"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="secret_codes.action_export_wizard" model="ir.actions.act_window">
    <field name="name">Export Codes</field>
    <field name="res_model">secret_codes.export_wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

</odoo>
