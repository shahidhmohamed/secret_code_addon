<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record model="ir.ui.view" id="secret_codes.list">
    <field name="name">secret_codes list</field>
    <field name="model">secret_codes</field>
    <field name="arch" type="xml">
      <list editable="bottom" create="false" decoration-info="is_last_updated">
        <header>
          <button name="%(secret_codes.action_generate_wizard)d" type="action" string="Generate" class="oe_highlight" display="always"/>
          <button name="%(secret_codes.action_bulk_activate_wizard)d" type="action" string="Bulk Actions" display="always"/>
          <button name="%(secret_codes.action_export_wizard)d" type="action" string="Export" display="always"/>
          <button name="action_sync_frappe_secret_codes" type="object" string="Fetch Frappe" display="always"/>
        </header>
        <field name="batch_code"/>
        <field name="secret_code_masked" widget="badge"/>
        <button name="action_view_secret_code" type="object" icon="fa-eye" string="" class="oe_link o_list_button"/>
        <field name="public_code"/>
        <field name="status" widget="badge" decoration-success="status == 'active'" decoration-danger="status == 'inactive'"/>
        <field name="validate_status" widget="badge" decoration-info="validate_status == 'validated'" decoration-warning="validate_status == 'pending'"/>
        <field name="is_search_limit_reached"/>
        <field name="is_printed" widget="boolean" optional="show" decoration-success="is_printed" decoration-muted="not is_printed"/>
        <field name="searched_count_success" readonly="1" widget="badge" decoration-success="searched_count_success &gt; 0" decoration-info="searched_count_success == 0"/>
        <field name="searched_count_fail" readonly="1" widget="badge" decoration-danger="searched_count_fail &gt; 0" decoration-info="searched_count_fail == 0"/>
        <field name="create_date"/>
        <field name="write_date" decoration-info="write_date"/>
      </list>
    </field>
  </record>

  <record model="ir.actions.act_window" id="secret_codes.action_secret_codes">
    <field name="name">Secret Codes</field>
    <field name="res_model">secret_codes</field>
    <field name="view_mode">list</field>
  </record>

  <menuitem id="secret_codes.menu_root" name="Secret Codes" web_icon="secret_codes,static/description/icon.png" sequence="10" groups="secret_codes.group_secret_codes_access"/>
  <menuitem action="secret_codes.action_secret_codes" name="Secret Codes" id="secret_codes.menu_list" parent="secret_codes.menu_root" sequence="10" groups="secret_codes.group_secret_codes_access"/>




</odoo>
