<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record model="ir.ui.view" id="secret_codes.list">
    <field name="name">secret_codes list</field>
    <field name="model">secret_codes</field>
    <field name="arch" type="xml">
      <list editable="bottom">
        <header>
          <button name="%(secret_codes.action_generate_wizard)d" type="action" string="Generate" class="oe_highlight" display="always"/>
          <button name="%(secret_codes.action_bulk_activate_wizard)d" type="action" string="Bulk Actions" display="always"/>
          <button name="%(secret_codes.action_export_wizard)d" type="action" string="Export" display="always"/>
          <button name="action_sync_frappe_secret_codes" type="object" string="Fetch Frappe" display="always"/>
        </header>
        <field name="batch_code"/>
        <field name="secret_code"/>
        <field name="public_code"/>
        <field name="status"/>
        <field name="validate_status"/>
        <field name="is_search_limit_reached"/>
        <field name="is_printed" optional="show"/>
        <field name="searched_count_success" optional="show" readonly="1"/>
        <field name="searched_count_fail" optional="show" readonly="1"/>
        <field name="create_date"/>
        <field name="write_date"/>
      </list>
    </field>
  </record>

  <record model="ir.actions.act_window" id="secret_codes.action_secret_codes">
    <field name="name">Secret Codes</field>
    <field name="res_model">secret_codes</field>
    <field name="view_mode">list</field>
  </record>

  <menuitem id="secret_codes.menu_root" name="Secret Codes" web_icon="secret_codes,static/description/icon.png" sequence="10"/>
  <menuitem id="secret_codes.menu" name="Codes" parent="secret_codes.menu_root" sequence="10"/>
  <menuitem action="secret_codes.action_secret_codes" name="Secret Codes List" id="secret_codes.menu_list" parent="secret_codes.menu" sequence="10"/>

</odoo>
