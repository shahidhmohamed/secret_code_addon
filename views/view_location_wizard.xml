<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="secret_codes.view_location_wizard_form" model="ir.ui.view">
    <field name="name">secret_codes.view_location_wizard.form</field>
    <field name="model">secret_codes.view_location_wizard</field>
    <field name="arch" type="xml">
      <form string="Location">
        <group>
          <field name="latitude"/>
          <field name="longitude"/>
          <field name="map_url" widget="url"/>
        </group>
        <group>
          <field name="map_embed" nolabel="1"/>
        </group>
        <footer>
          <button string="Close" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>
